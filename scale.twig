                        <input type="number"step="0.1" min="0"  name="maxC" placeholder="C - Maximum score" class="form-control mb-3"/>
                        <input type="number"step="0.1" min="0"  name="maxD" placeholder="D - Maximum score" class="form-control mb-3" />
