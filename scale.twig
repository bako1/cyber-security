<body class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 m-auto mt-5">
                <div class="card bg-light">
                   
                
                <div class="card-body">
                    <form action="./scale.php" method="post">
                    <div class="row">
                    
                    <div class="col-sm-6">
                        <input type="number" step="0.1"min="0" name="minA" placeholder="A - Minimum score" class="form-control mb-3 mt-3"/>
                        <input type="number"step="0.1" min="0"  name="minB" placeholder="B - Minimum score" class="form-control mb-3"/>
                        <input type="number"step="0.1" min="0"  name="minC" placeholder="C - Minimum score" class="form-control mb-3"/>
